<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionOverlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mainButton"
        android:theme="@style/MyTheme"
        android:src="@drawable/icon_plus_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp" />
    <RelativeLayout
        android:id="@+id/actionContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/subAction_1"
            android:theme="@style/MyTheme"
            android:src="@mipmap/ic_heart_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="81dp" />
        <TextView
            android:id="@+id/subAction_1_tag"
            android:text="@string/ui_newDonation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="73dp"
            android:layout_marginBottom="93dp"
            android:gravity="end"
            android:textSize="16dp"
            android:textColor="#ffffffff" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/subAction_2"
            android:theme="@style/MyTheme"
            android:src="@mipmap/ic_heart_broken_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="131dp"
            android:padding="28dp" />
        <TextView
            android:id="@+id/subAction_2_tag"
            android:text="@string/ui_miss"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="73dp"
            android:layout_marginBottom="143dp"
            android:gravity="end"
            android:textSize="16dp"
            android:textColor="#ffffffff" />
    </RelativeLayout>
</RelativeLayout>